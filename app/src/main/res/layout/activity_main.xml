        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/Two_Number"
        app:layout_constraintEnd_toStartOf="@+id/Six_Number" />

    <TextView
        android:id="@+id/One_Number"
        android:layout_width="83dp"
        android:layout_height="76dp"
        android:layout_marginStart="16dp"

        android:layout_marginEnd="15dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/button_shape"
        android:elevation="10dp"
        android:gravity="center"
        android:onClick="oneClicked"

        android:shadowColor="@color/white"
        android:text="1"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/Zero_Number"
        app:layout_constraintEnd_toStartOf="@+id/Two_Number"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

