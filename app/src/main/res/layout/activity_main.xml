        android:elevation="10dp"
        android:gravity="center"
        android:onClick="procentClicked"

        android:shadowColor="@color/white"
        android:text="%"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/Eight_Number"
        app:layout_constraintEnd_toStartOf="@+id/Devision_Operation" />

    <TextView
        android:id="@+id/Devision_Operation"
        android:layout_width="83dp"
