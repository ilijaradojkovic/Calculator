        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/Minus_Operation"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/Zero_Number"
        android:layout_width="83dp"
        android:layout_height="76dp"

        android:layout_marginEnd="112dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/button_shape"
        android:clickable="true"
        android:elevation="10dp"
        android:focusable="true"
        android:gravity="center"
        android:onClick="zeroClicked"
        android:shadowColor="@color/white"

        android:tag="0"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/equals_Sign"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/Nine_Number"
        android:layout_width="83dp"
        android:layout_height="76dp"
        android:onClick="nineClicked"
