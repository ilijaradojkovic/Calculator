    <TextView
        android:id="@+id/Seven_Number"
        android:layout_width="83dp"
        android:layout_height="76dp"
        android:onClick="sevenClicked"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="15dp"

        android:layout_marginBottom="32dp"
        android:background="@drawable/button_shape"
        android:elevation="10dp"
        android:gravity="center"
        android:shadowColor="@color/white"

        android:text="7"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/Four_Number"
        app:layout_constraintEnd_toStartOf="@+id/Eight_Number"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/Eight_Number"
        android:layout_width="83dp"
        android:layout_height="76dp"

        android:layout_marginEnd="15dp"
        android:onClick="eightClicked"
        android:layout_marginBottom="32dp"
        android:background="@drawable/button_shape"
        android:elevation="10dp"
        android:gravity="center"
        android:shadowColor="@color/white"

        android:text="8"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/Five_Number"
        app:layout_constraintEnd_toStartOf="@+id/Nine_Number" />

    <TextView
        android:id="@+id/Minus_Operation"
        android:layout_width="83dp"
        android:layout_height="76dp"
        android:layout_marginEnd="16dp"
        android:onClick="subClicked"
        android:layout_marginBottom="32dp"
        android:background="@drawable/button_shape_purple"
        android:elevation="10dp"
        android:gravity="center"

        android:shadowColor="@color/white"

        android:text="-"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/Plus_Operation"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
