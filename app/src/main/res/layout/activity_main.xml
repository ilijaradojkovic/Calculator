        android:text="("
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/Procent_Operation"
        app:layout_constraintEnd_toStartOf="@+id/Righ_Bracet_Operation" />

    <TextView
        android:id="@+id/Delete_Operation"
        android:layout_width="83dp"
        android:layout_height="76dp"
